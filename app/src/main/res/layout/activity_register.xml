<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black"
    tools:context=".controllers.Register">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="109dp"
        android:layout_height="117dp"
        android:layout_marginTop="632dp"
        android:onClick="RegisterIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saverec" />

    <EditText
        android:id="@+id/userNameS"
        android:layout_width="254dp"
        android:layout_height="70dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adlam_display"
        android:hint="Escriba su nombre de usuario"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pass1S"
        android:layout_width="254dp"
        android:layout_height="70dp"
        android:layout_marginTop="424dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adlam_display"
        android:hint="Escriba su contraseña"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/surNameS"
        android:layout_width="254dp"
        android:layout_height="70dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adlam_display"
        android:hint="Escriba su apellido"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pass2S"
        android:layout_width="254dp"
        android:layout_height="70dp"
        android:layout_marginTop="512dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adlam_display"
        android:hint="Repita su contraseña"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameS"
        android:layout_width="254dp"
        android:layout_height="70dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adlam_display"
        android:hint="Escriba su nombre"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

</androidx.constraintlayout.widget.ConstraintLayout>